<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_background">

    <!-- Top Navigation -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="SKIP"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:text="Select your Field of Interest"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <!-- Interest Fields -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:alignItems="flex_start"
        app:alignContent="flex_start"
        app:layout_constraintBottom_toTopOf="@+id/btnContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading">

        <TextView
            android:id="@+id/tvAI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Artificial Intelligence"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWebDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Web Development"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRobotics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Robotics"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMobileDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Mobile Development"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDataScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Data Science"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCyberSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Cyber Security"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGameDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Game Development"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBlockchain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Blockchain"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvIoT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Internet of Things"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCloudComputing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="Cloud Computing"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDevOps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="DevOps"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvUiUx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/pill_button_selector"
            android:text="UI/UX Design"
            android:textColor="#333333"
            android:textSize="16sp" />

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_gradient"
        android:text="CONTINUE"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>